<UserControl x:Class="ScriptPlayer.Shared.BeatTimeLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shared="clr-namespace:ScriptPlayer.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <shared:TimePanel x:Name="timePanel"
        
        ViewPort="{Binding RelativeSource={RelativeSource AncestorType=shared:BeatTimeLine}, Path=ViewPort}"
                          Offset="{Binding RelativeSource={RelativeSource AncestorType=shared:BeatTimeLine}, Path=Offset}">
        
    </shared:TimePanel>
</UserControl>

