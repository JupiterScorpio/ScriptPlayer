        <Border Background="DimGray" BorderThickness="1" BorderBrush="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Name="TextBlock" Foreground="White" FontSize="20" Text="Example" Padding="8,0,8,4" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>
